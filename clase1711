class Candidate:
    candidate = ""
    political_party = ""
    vote = 0

    #metodos
    def add_vote(self,vote):
        self.vote +=1

    ##constructor
    def __init__(self,candidate,political_party,vote):
        self.candidate = candidate
        self.political_party = political_party
        
        
candidate_1= input("Ingrese el nombre del primer candidato: ")
